{
  "name": "dietwise-renderer",
  "version": "0.1.0",
  "description": "The web page renderer internal component of DietWise; it renders recipe pages on behalf of the mobile app",
  "license": "ISC",
  "author": "",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint",
    "format": "prettier . --write",
    "clean:html": "tsx scripts/clean-html-for-llm.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "async-mutex": "^0.5.0",
    "express": "^5.2.1",
    "linkedom": "^0.18.12",
    "playwright": "^1.58.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@nabla/vite-plugin-eslint": "^2.0.6",
    "@playwright/test": "^1.58.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "schema-dts": "^1.1.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  }
}
